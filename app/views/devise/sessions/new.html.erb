<h2 style="display: flex; justify-content: center; color:#007bff;">Log in</h2>
<div class="login">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, style:"color:#007bff;" %><br />
    <%= f.email_field :email, autofocus: true,class:"form-control", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, style:"color:#007bff;" %><br />
    <%= f.password_field :password,class:"form-control", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, style:"color:#007bff;"%>
    </div>
  <% end %>

  <div class="actions" style="display: flex; justify-content: center;">
    <%= f.submit "Log in", class:"btn btn-primary", style:"width:40%; justify-content:center;" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
